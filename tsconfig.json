{
	"compileOnSave": true,
	"compilerOptions": {
		"declaration": true,
		"declarationDir": "../dist/esm",
		"importHelpers": true,
		"lib": [
			"dom",
			"es5",
			"es2015.collection",
			"es2015.promise"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noImplicitThis": true,
		"outDir": "dist/cjs",
		"removeComments": false,
		"sourceMap": false,
		"strictFunctionTypes": true,
		"strictNullChecks": true,
		"target": "es5"
	},
	"include": [
		"src/**/*.ts",
		"test/**/*.ts"
	]
}